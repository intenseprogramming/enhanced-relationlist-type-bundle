{% trans_default_domain 'enhancedrelationlist_attribute' %}

{% block boolean_relation_attribute %}
    {{ attribute.value ? 'field.boolean.yes'|trans : 'field.boolean.no'|trans }}
{% endblock %}

{% block integer_relation_attribute %}
    {% if attribute.value is not null %}
        {{ attribute.value }}
    {% else %}
        <em>{{ 'field.empty'|trans }}</em>
    {% endif %}
{% endblock %}

{% block string_relation_attribute %}
    {% if attribute.value is not null %}
        {{ attribute.value }}
    {% else %}
        <em>{{ 'field.empty'|trans }}</em>
    {% endif %}
{% endblock %}

{% block selection_relation_attribute %}
    {% if attribute.selection is not empty %}
        {% for index in attribute.selection %}
            {{ definition.settings.options[index][field.languageCode]|default(definition.settings.options[index]) }}{% if not loop.last %},{% endif %}
        {% endfor %}
    {% else %}
        <em>{{ 'field.empty'|trans }}</em>
    {% endif %}
{% endblock %}
